<UserControl x:Class="PBapp.Infrastructure.Components.NavigationMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBapp.Infrastructure.Components"
             xmlns:vm="clr-namespace:PBapp.MVVM.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="100">
    <UserControl.DataContext>
        <vm:MainViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        
        <StackPanel>
            <local:NavigationButton IsChecked="True"
                                    Icon="Solid_Home"
                                    Command="{Binding SelectCompositionsViewCommand}"/>

            <local:NavigationButton Icon="Regular_Newspaper"
                                    Command="{Binding SelectNewsViewCommand}"/>
        </StackPanel> 
    </Grid>
</UserControl>
